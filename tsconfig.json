{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": [
      "ES6"
    ],
    "baseUrl": "..",
    "types": ["node"]
  }
}
